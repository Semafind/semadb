{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "go",
			"label": "go: test package",
			"command": "test",
			"args": [
				"${fileDirname}"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "test",
			"detail": "cd /home/nuric/semadb; go test ${fileDirname}"
		},
		{
			"type": "shell",
			"label": "go: test race shard",
			"command": "go clean -testcache && go test -race ./shard",
		},
		{
			"type": "shell",
			"label": "go: profile",
			"command": "go",
			"args": [
				"tool",
				"pprof",
				"-http=:8081",
				"${workspaceFolder}/dump/cpu.prof"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "go: coverage",
			"command": "go test -coverprofile=coverage.out ${fileDirname} && go tool cover -html=coverage.out -o coverage.html",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "go: update packages",
			"command": "go",
			"args": [
				"get",
				"-u",
				"./..."
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "run-single-server",
			"command": "go run ./",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"env": {
					"SEMADB_CONFIG": "${workspaceFolder}/config/singleServer.yaml",
				}
			}
		},
		{
			"type": "shell",
			"label": "run-serverA",
			"command": "go run ./",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"env": {
					"SEMADB_CONFIG": "${workspaceFolder}/config/serverA.yaml",
				}
			}
		},
		{
			"type": "shell",
			"label": "run-serverB",
			"command": "go run ./",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"env": {
					"SEMADB_CONFIG": "${workspaceFolder}/config/serverB.yaml",
				}
			}
		},
		{
			"type": "shell",
			"label": "run-serverC",
			"command": "go run ./",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"env": {
					"SEMADB_CONFIG": "${workspaceFolder}/config/serverC.yaml",
				}
			}
		},
		{
			"label": "run-cluster",
			"dependsOrder": "parallel",
			"dependsOn": [
				"run-serverA",
				"run-serverB",
				"run-serverC"
			],
			"problemMatcher": [],
		}
	]
}